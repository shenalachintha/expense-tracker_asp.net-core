@model Expense_Tracker.Models.Category

@{
    ViewData["PageTitle"] = Model.CategoryId == 0 ? "Create a new category" : "Edit category";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="row g-4 align-items-stretch">
                <!-- Form Section -->
                <div class="col-md-7">
                    <div class="widget p-5 h-100">
                        <h3 class="mb-4 text-white">@ViewData["PageTitle"]</h3>
                        <form asp-action="AddOrEdit" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <input type="hidden" asp-for="CategoryId" />
                            <div class="mb-3">
                                <label asp-for="Type" class="form-label"></label>
                                <div class="e-btn-group">
                                    <input type="radio" id="radio-expense" name="Type" value="Expense" @(Model.Type == "Expense" ? "checked" : "") />
                                    <label class="e-btn" for="radio-expense">Expense</label>
                                    <input type="radio" id="radio-income" name="Type" value="Income" @(Model.Type == "Income" ? "checked" : "") />
                                    <label class="e-btn" for="radio-income">Income</label>
                                </div>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label"></label>
                                <ejs-textbox id="title" ejs-for="Title" placeholder="Title"></ejs-textbox>
                                <span asp-validation-for="Title" class="text-danger fs-6"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Icon" class="form-label"></label>
                                <ejs-textbox id="icon" ejs-for="Icon" placeholder="Icon"></ejs-textbox>
                                <span asp-validation-for="Icon" class="text-danger fs-6"></span>
                            </div>
                            <div class="d-grid">
                                <ejs-button id="submit" type="submit" content="Submit" cssClass="btn-green"></ejs-button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Icon Section -->
                <div class="col-md-5 d-flex align-items-center">
                    <div class="widget icon-widget w-100 d-flex justify-content-center align-items-center">
                        <i class="fa-solid fa-shapes fa-4x text-secondary"></i>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <a asp-action="Index" class="text-decoration-none text-info">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}